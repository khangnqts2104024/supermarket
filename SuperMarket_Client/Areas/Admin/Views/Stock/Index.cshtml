@using SuperMarket_Models.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}
@model IEnumerable<Product>



<div class="container" style="margin:10px;">

    <table id="Stock" class="display" style="width:100%;">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Brand Name</th>
                <th>Category Name</th>
                <th>Branch Name</th>
                <th>The Remaining Amount</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @Model)
            {
                if (item.Stock != null)
                {
                    foreach (var stock in item.Stock)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.Brand_Category.Brand.BrandName</td>
                            <td>@item.Brand_Category.Category.CategoryName</td>
                            <td>@stock.Branch.BranchName</td>
                            <td>@stock.Count</td>
                            <td ><a class="btn btn-success" asp-action="AddStock" asp-area="Admin" asp-controller="Stock" asp-route-id="@stock.StockId">Add More Stock of Product</a></td>
                        </tr>
                    }
                }
               
            }

        </tbody>
        <tfoot>
            <tr>
                <th>Product Name</th>
                <th>Brand Name</th>
                <th>Category Name</th>
                <th>Branch Name</th>
                <th>The Remaining Amount</th>
                <th>Action</th>
        </tfoot>
    </table>

</div>



@section Scripts
    {
    <script>
        $(document).ready(function() {
            $('#Stock').DataTable();


        })
        //    $(document).ready(function () {
        //    $('#example').DataTable();
        //});



    </script>

}