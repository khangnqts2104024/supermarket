@using SuperMarket_Models.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";

}
@model Stock


<div class="container">
    <div class="d-flex justify-content-center col-md-8 offset-2 ">

        <form class="flex-fill" asp-action="AddStock" asp-area="Admin" asp-controller="Stock" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <h3 class="control-label">Add Stock </h3>
                <h4>Product : <span style="color:midnightblue">@ViewBag.productName</span></h4>
                <h4>Branch : <span style="color:midnightblue">@ViewBag.branchName</span></h4>
            </div>
                <input readonly hidden asp-for="StockId" value="@Model.StockId" />
            <div class="form-group">
                <label  class="control-label" > Number of addition unit: </label>
                <input name="number" class="form-control" type="number" min="1" max="100" />
                
            </div>
            <hr />
            <div class="form-group">

                <input type="submit" value="Add Stock" class="form-control" />

            </div>
        </form>
    </div>
</div>