@using SuperMarket_Models.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers
@{
	  Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
	  
}
@model Coupon


<div class="container">
    <div class="d-flex justify-content-center col-md-8 offset-2 ">
      
         <form class="flex-fill"  asp-action="NewCoupon" asp-area="Admin" asp-controller="Coupon"  method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">CouponCode</label>
                <input asp-for="CouponCode" class="form-control" />
                <span asp-validation-for="CouponCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label  class="control-label">DiscountPercent</label>
                <input asp-for="DiscountPercent" class="form-control" />
                <span asp-validation-for="DiscountPercent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">ExpiredDate</label>
                <input type="date" asp-for="ExpiredDate" class="form-control" />
                <span asp-validation-for="ExpiredDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Quantity</label>
                <input asp-for="Count" type="number" class="form-control" />
                <span asp-validation-for="Count" class="text-danger"></span>     
            </div>
           <div class="form-group">
              
                <input type="submit" value="Add New Coupon" class="form-control" />
                
            </div>
        </form>
    
</div>

 </div>